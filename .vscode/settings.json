{
    "files.exclude": {
        ".vscode-test": true,
        "dist": true,
        "node_modules": true,
        "webview-ui": true, // This folder is added as a seperate workspace folder in vscode-unreal-python.code-workspace
        "LICENSE": true,
        "*.code-workspace": true,
        "*.vsix": true,
        "**/__pycache__": true,
        "**/**.pyc": true
    },
    
    "search.exclude": {
        "out": true,
        "test": true,
        "media": true,
    },

    "python.analysis.typeCheckingMode": "standard",

    "autopep8.args": [
        "--ignore=E501"
    ],
}